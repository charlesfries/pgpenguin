<main>

	{{#if error}}
		<div class="alert alert-danger " role="alert">
			<strong>Error.</strong> {{error}}
			<button type="button" class="close" {{action (mut error)}}>&times;</button>
		</div>
	{{/if}}

	<BsForm @formLayout="vertical" @model={{this}} @onSubmit={{action "submit"}} as |form|>

		<div class="row">
			<div class="col">

				<KeyDropdown @keys={{model}} @onSelect={{action "selectKey"}} />
				<form.element @property="publicKey" @controlType="textarea" @label="Public key" @rows={{22}} @required={{true}} />
			
			</div>
			<div class="col">

				<form.element @property="message" @controlType="textarea" @label="Unencrypted message" @rows={{10}} @required={{true}} />
				<BsButton @defaultText="Encrypt" @type="primary" @buttonType="submit" />
			
			</div>
		</div>

	</BsForm>

</main>

{{#if result}}
	<footer>
		<p class="text-success"><FaIcon @icon="check" /> Success</p>
		<pre><code class="text-light">{{result}}</code></pre>
	</footer>
{{/if}}



