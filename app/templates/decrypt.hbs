<main class="p-3">

	<BsForm @formLayout="vertical" @model={{this}} @onSubmit={{action "submit"}} as |form|>

		<KeyDropdown @keys={{model}} @onSelect={{action "selectKey"}} />
		<form.element @controlType="textarea" @label="Private key" @property="privateKey" @rows={{26}} @required={{true}} />

		<form.element @controlType="password" @label="Password (Optional)" @property="password" />
		<form.element @controlType="textarea" @label="Message" @property="message" @rows={{10}} @required={{true}} />

		<BsButton @defaultText="Decrypt" @type="primary" @buttonType="submit" />

	</BsForm>

</main>

{{#if result}}
	<aside class="p-3">
		<div class="card">
			<h5 class="card-header">Message</h5>
			<div class="card-body">
				<p class="card-text">{{result}}</p>
			</div>
		</div>
	</aside>
{{/if}}
