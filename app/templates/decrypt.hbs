<BsForm @formLayout="vertical" @model={{this}} @onSubmit={{action "submit"}} as |form|>

	<div class="row">
		<div class="col">

			<KeyDropdown @keys={{model}} />

			<form.element @controlType="textarea" @label="Private key" @property="privateKey" @rows={{10}} @required={{true}} />
			<form.element @controlType="password" @label="Password" @property="password" />
				

		</div>
		<div class="col">

			<form.element @controlType="textarea" @label="Message" @property="message" @rows={{10}} @required={{true}} />

		</div>
	</div>

	<BsButton @defaultText="Decrypt" @type="primary" @buttonType="submit" />

</BsForm>

{{#if result}}
	<div class="card mt-3">
		<div class="card-body">
			{{result}}
		</div>
	</div>
{{/if}}
